{
  "compileOnSave": false,
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": "./",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "lib": ["es2018", "dom"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist/out-tsc",
    "paths": {
      "@ws/app": ["project/ws/app"],
      "@ws/app/*": ["project/ws/app/*"],
      "@ws/author": ["project/ws/author"],
      "@ws/author/*": ["project/ws/author/*"],
      "@ws/viewer": ["project/ws/viewer"],
      "@ws/viewer/*": ["project/ws/viewer/*"],
      "@ws/learning-hub": ["project/ws/learning-hub"],
      "@ws/learning-hub/*": ["project/ws/learning-hub/*"],
      "@sunbird-cb/collection": ["library/ws-widget/collection"],
      "@sunbird-cb/collection/*": ["library/ws-widget/collection/*"],
      "@sunbird-cb/utils": ["library/ws-widget/utils"],
      "@sunbird-cb/utils/*": ["library/ws-widget/utils/*"],
      "@sunbird-cb/resolver": ["library/ws-widget/resolver"],
      "@sunbird-cb/resolver/*": ["library/ws-widget/resolver/*"]
    },
    "removeComments": true,
    "sourceMap": false,
    "strict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types", "./custom_typings"],
    "plugins": [{
        "name": "@angular/language-service"
      },
      {
        "name": "typescript-tslint-plugin",
        "alwaysShowRuleFailuresAsWarnings": false,
        "ignoreDefinitionFiles": true,
        "configFile": "./tslint.json",
        "suppressWhileTypeErrorsPresent": false
      }
    ]
  }
}
